//Swapping using third variable:-

#include<stdio.h>

int main()
{
    int num1,num2,temp;
    
    printf("***************  Before Swapping  ***************\n");
    printf("Enter first number:");
    scanf("%d",&num1);
    printf("Enter second number:");
    scanf("%d",&num2);
    
    temp=num1;
    num1=num2;
    num2=temp;
    
    printf("**************  After Swapping  ***************\n");
    printf("First Number is:%d\n",num1);
    printf("Second Number is:%d\n",num2);
    
    return 0;
}


//Swapping using without third variable:-

#include<stdio.h>

int main()
{
    int num1,num2;
    
    printf("***************  Before Swapping  ***************\n");
    printf("Enter first number:");
    scanf("%d",&num1);
    printf("Enter second number:");
    scanf("%d",&num2);
    
    num1=num1+num2;
    num2=num1-num2;
    num1=num1-num2;
    
    printf("**************  After Swapping  ***************\n");
    printf("First Number is:%d\n",num1);
    printf("Second Number is:%d\n",num2);
    
    return 0;
}
