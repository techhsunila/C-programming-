//1. Pyramid Pattern:-

#include<stdio.h>
int main()
{
    int rows,i,j;
    
    printf("Enter the number of rows: ");
    scanf("%d",&rows);
    
    for(i=1;i<=rows;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}


//2. Inverted Pyramid Pattern:

#include<stdio.h>
int main()
{
    int rows,i,j;
    
    printf("Enter the number of rows: ");
    scanf("%d",&rows);
    
    for(i=rows;i>=1;i--)
    {
        for(j=1;j<=i;j++)
        {
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}


//3. Diamond Pattern:

#include<stdio.h>
int main()
{
    int rows,i,j;
    
    printf("Enter the number of rows: ");
    scanf("%d",&rows);
    
    // Print the upper half of the diamond
    for(i=1;i<=rows;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    // Print the lower half of the diamond
    for(i=rows-1;i>=1;i--)
    {
        for(j=1;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}


//4.Hollow Square Pattern:

#include<stdio.h>
int main()
{
    int i,j,rows;
    
    printf("Enter the number of rows:");
    scanf("%d",&rows);
    
    for(i=1; i<=rows; i++)
    {
        for(j=1; j<=rows; j++)
        {
            if(i==1 || i==rows || j==1 || j==rows)
                printf("* ");
            else
                printf("  ");
        }
        printf("\n");
    }
    return 0;
}


//Number Pattern 1:-

#include<stdio.h>

int main()
{
    int i,j;
    
    for(i=1;i<=5;i++)
    {
        for(j=5;j>=i;j--)
        {
            printf("%d\t",j);
        }
        printf("\n");
    }
    
    return 0;
}


//Number Pattern 2:-

#include<stdio.h>

int main()
{
    int i,j;
    
    for(i=5;i>0;i--)
    {
        for(j=1;j<=i;j++)
        {
            printf("%d\t",i);
        }
        printf("\n");
    }
    
    return 0;
}

//Number Pattern 3:-

#include<stdio.h>

int main()
{
    int i,j;
    
    for(i=1;i<=5;i++)
    {
        for(j=5;j>=i;j--)
        {
            printf("%d\t",i);
        }
        printf("\n");
    }
    
    return 0;
}


//Character Pattern 1:-

#include<stdio.h>

int main()
{
    int i,j;
    
    for(i=1;i<=5;i++)
    {
        for(j=1;j<=5;j++)
        {
            if(i>=j)
            printf("%c\t",(i+64));
            else
            printf(" ");
        }
        printf("\n");
    }
    
    return 0;
}

//Character Pattern 2:-

#include<stdio.h>

int main()
{
    int i,j;
    
    for(i=1;i<=5;i++)
    {
        for(j=1;j<=5;j++)
        {
            if(i>=j)
            printf("%c\t",(j+64));
            else
            printf(" ");
        }
        printf("\n");
    }
    
    return 0;
}
